#:kivy 1.10.1

<ConfigWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        #font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        font_name: 'fonts/ipam.ttf'
        #text: root.parent.config_title
        text: "Config"
        pos_hint: { "center_x": .5, "center_y": .6}
    Button:
        font_size: dp(30)
#        font_name: 'fonts/Eurostile.ttf'
        font_name: 'fonts/ipam.ttf'
        #text: root.parent.config_button_title
        text: "Save"
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .2, .15
        on_press: root.parent.on_config_button_pressed(True)
        background_normal: ''
        background_color: 1, .3, .4, .85

    Button:
        font_size: dp(30)
#        font_name: 'fonts/Eurostile.ttf'
        font_name: 'fonts/ipam.ttf'
        #text: root.parent.config_button_title
        text: "Cancel"
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .2, .15
        on_press: root.parent.on_config_button_pressed(False)
        background_normal: ''
        background_color: 1, .3, .4, .85
